            <li class="list-item">
              <%= collection.date.strftime('%d %b %Y') %>
            </li>
            <li class="list-item">
              <%= collection.date.strftime('%d %b %Y') %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
