<div class="outline">
  <h1>Welcome <%= current_user.first_name %></h1>
  <p>It's <%= Date.today.strftime('%A, %b %d') %></p>
  <% if @subscriptions.empty? %>
    <h2>There are no subscriptions waiting for you.</h2>
  <% else %>
    <p>There are <%= @subscriptions.count %> parcels waiting for you</p>
    <p><strong> <%= pluralize(@skip_subscriptions.count, 'house') %> asked to be skipped:</strong></p>
    <% @skip_subscriptions.each do |subscription| %>
      <p><%= subscription.user.first_name %> at <%= subscription.street_address %> </p>
    <% end %>
    <p><strong>And <%= pluralize(@bags_needed.count, 'house') %> need bags</strong></p>
    <% @bags_needed.each do |sub| %>
      <p><%= sub.collections.last.needs_bags %> for <%= sub.user.first_name %> at <%= sub.street_address %></p>
    <% end %>
  <% end %>
</div>
