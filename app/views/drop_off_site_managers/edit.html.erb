<div class="driver-wrapper">
  <h2>Contact Details</h2>
  <p class="lh-lg">Help us stay in touch by updating your contact information and notes for <%= @drop_off_site.name %></p>

  <%= form_with model: @drop_off_site, url: drop_off_site_manager_path(@drop_off_site), method: :patch, local: true do |f| %>
    <% if @drop_off_site.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@drop_off_site.errors.count, "error") %> prohibited this from being saved:</h4>
        <ul>
          <% @drop_off_site.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="outline mb-4">
      <div class="mb-3">
        <%= f.label :contact_name, class: "form-label" %>
        <%= f.text_field :contact_name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :notes, "Notes (special instructions, access codes, etc.)", class: "form-label" %>
        <%= f.text_area :notes, rows: 4, class: "form-control" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Save Changes", class: "small-yellow-btn me-2" %>
        <%= link_to "Cancel", drop_off_site_manager_path(@drop_off_site), class: "link-title" %>
      </div>
    </div>
  <% end %>
</div>
