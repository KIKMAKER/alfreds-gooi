  <div class="email-body" style="width: 701px; margin: 0 auto; font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;">

<div style="padding: 32px; max-width: 500px; margin: 0 auto;">
  <h1 style="margin:0 0 16px; font-size: 24px; font-weight: 600; color: #1f2937;">Your invoice is ready</h1>

  <% if @user %>
    <p style="margin:0 0 20px; font-size: 16px; color: #6b7280; line-height: 1.5;">Hi <%= @user.first_name || @user.email %>,</p>
  <% end %>

  <div style="background: #f8fafc; border-radius: 8px; padding: 20px; margin: 0 0 24px 0;">
    <p style="margin:0 0 12px; font-size: 15px; color: #374151;">
      Your invoice <strong style="color: #1f2937;">#<%= @invoice.number || @invoice.id %></strong> has been generated.
    </p>

    <div style="display: grid; gap: 8px;">
      <p style="margin:0; font-size: 15px; color: #374151;">
        <strong style="color: #1f2937;">Total:</strong> R<%= number_with_precision(@invoice.total_amount.to_f, precision: 2) %>
      </p>
      <p style="margin:0; font-size: 15px; color: #374151;">
        <strong style="color: #1f2937;">Due:</strong> <%= @invoice.due_date&.strftime('%e %b %Y') %>
      </p>
    </div>
  </div>

  <div style="text-align: center; margin: 0 0 32px 0;">
    <a href="<%= invoice_url(@invoice) %>"
      style="display:inline-block;padding:12px 24px; text-decoration:none; border-radius:6px; background:#1a7f37; color:white; font-weight:500; font-size:15px;">
      View Invoice
    </a>
  </div>

  <p style="margin:0; color:#9ca3af; font-size:14px; text-align:center;">
    With appreciation,<br><strong style="color:#6b7280;">Gooi</strong>
  </p>
</div>

    <hr style="border:none;border-top:1px solid #e5e5e5;margin:0px 0;">

  </div>

</div>
