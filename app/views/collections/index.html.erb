<div class="gooi-container">
  <div class="outline">
    <div>
      <h1>All collections made <%= @today %></h1>
      <% @collections.each do |collection| %>
        <% if collection.skip %>
          <s>
            <p><%= collection.subscription.user.first_name %> skipped</s>
          <% else %>
            <p><%= collection.subscription.user.first_name %>: <%= collection.bags&.to_i || 0 %> bags</p>
          <% end %>
        <% end %>
      </div>
      <%= link_to "home", root_path, class: "gooi-button" %>
    </div>
  </div>
