<div class="navbar-container" data-controller="hello">
  <div class="inner-container">
    <%= link_to root_path do %>
      <%= image_tag('gooi_logo_CR.png', class: 'gooi-logo') %>
    <% end %>
    <div class="links-container">
      <%= link_to 'subscriptions', subscriptions_path, class:"link-title" %>
      <%= link_to 'invoices', invoices_path, class:"link-title" %>
      <%= link_to 'users', admin_users_path, class:"link-title" %>
      <%= link_to 'products', admin_products_path, class:"link-title" %>
      <%= link_to 'discounts', admin_discount_codes_path, class:"link-title" %>
      <%= link_to 'drop-offs', admin_drop_off_sites_path, class:"link-title" %>
      <%= link_to 'drivers days', drivers_days_path, class:"link-title" %>
      <%= link_to 'collections', this_week_collections_path, class:"link-title" %>

      <% if user_signed_in?  %>
        <div class="sign-up-btn">
          <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete} %>
        </div>
      <% else %>
        <div class="sign-up-btn">
          <%= link_to "Log in", new_user_session_path %>
        </div>
      <% end %>
    </div>
    <div class="hamburger-menu" data-action="click->hello#toggleHide">
      <div id="menu-icon">
      </div>
      <ul>
        <li class="nav-item dropdown">
          <%= image_tag 'menu-svgrepo-com.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to 'subscriptions', subscriptions_path, class: "dropdown-item" %>
            <%= link_to 'invoices', invoices_path, class: "dropdown-item" %>
            <%#= link_to 'payments', payments_path, class:"dropdown-item" %>
            <%= link_to 'users', admin_users_path, class:"dropdown-item" %>
            <%= link_to 'products', admin_products_path, class:"dropdown-item" %>
            <%= link_to 'discounts', admin_discount_codes_path, class:"dropdown-item" %>
            <%= link_to 'drop-offs', admin_drop_off_sites_path, class:"dropdown-item" %>
            <%= link_to 'drivers days', drivers_days_path, class:"dropdown-item" %>
            <%= link_to 'collections', this_week_collections_path, class:"dropdown-item" %>
            <% if user_signed_in? %>
              <%= link_to "log out", destroy_user_session_path,
                  data: { turbo_method: :delete }, class: "dropdown-item" %>
            <% else %>
              <%= link_to 'Log in', new_user_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
