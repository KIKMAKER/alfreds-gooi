<div class="navbar-container" data-controller="hello">
  <div class="inner-container">
    <%= link_to root_path do %>
      <%= image_tag('gooi_logo_CR.png', class: 'gooi-logo') %>
    <% end %>
    <div class="links-container">
      <%= link_to 'The story', story_path, class:"link-title" %>
      <%= link_to 'How we compost', root_path, class: "link-title" %>
      <% if user_signed_in?  %>
        <div class="sign-up-btn">
          <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete} %>
        </div>
      <% else %>
        <div class="sign-up-btn">
          <%= link_to "Log in", new_user_session_path %>
        </div>
      <% end %>
    </div>
    <div class="hamburger-menu" data-action="click->hello#toggleHide">
      <div id="menu-icon">
      </div>
      <ul>
        <li class="nav-item dropdown">
          <%= image_tag 'menu-svgrepo-com.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to 'The Story', story_path, class: "dropdown-item" %>
            <% if user_signed_in? %>
              <% link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            <% else %>
              <%= link_to 'Log in', new_user_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
