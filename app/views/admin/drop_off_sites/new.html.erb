<div class="user-wrapper">
  <h1 class="my-4">Create Drop-Off Site</h1>

  <%= simple_form_for [:admin, @drop_off_site] do |f| %>
    <%= f.input :name, placeholder: "e.g. Neighbourhood Farm" %>

    <%= f.input :street_address, placeholder: "e.g. Paris Road, Fish Hoek" %>

    <%= f.input :suburb,
          as: :select,
          collection: Subscription::SUBURBS,
          prompt: "Select a suburb" %>

    <%= f.input :collection_day,
          as: :select,
          collection: Date::DAYNAMES.map { |day| [day, day] },
          prompt: "Select collection day" %>

    <%= f.association :user,
          collection: User.where(role: 'drop_off').order(:first_name),
          label_method: lambda { |u| "#{u.first_name} (#{u.email})" },
          prompt: "Select manager (optional)",
          hint: "Assign a drop-off manager to this site" %>

    <%= f.input :contact_name, placeholder: "e.g. Sibusiso" %>

    <%= f.input :phone_number,
          placeholder: "+27 82 555 1234",
          hint: "International format preferred (e.g. +27 82 555 1234)" %>

    <%= f.input :notes,
          as: :text,
          input_html: { rows: 4 },
          placeholder: "e.g. Last stop on route. Enter through main gate.",
          hint: "Any special instructions for the driver" %>

    <%= f.input :photo, as: :file, hint: "Upload a photo of the drop-off site" %>

    <h4 class="mt-4 mb-3">Public Page Content</h4>

    <%= f.input :story,
          as: :text,
          input_html: { rows: 6 },
          placeholder: "Tell the story of this farm - their mission, values, composting methods, community impact, etc.",
          hint: "This will appear on the public farm page" %>

    <%= f.input :website,
          placeholder: "https://example.com",
          hint: "Full URL to the farm's website" %>

    <%= f.input :instagram_handle,
          placeholder: "farmname",
          hint: "Instagram handle without the @ symbol" %>

    <%= f.input :facebook_url,
          placeholder: "https://facebook.com/farmname",
          hint: "Full URL to the farm's Facebook page" %>

    <%= f.button :submit, "Create Drop-Off Site", class: "small-yellow-btn" %>
  <% end %>

  <%= link_to "← Back to all sites", admin_drop_off_sites_path, class: "mt-3 d-block" %>
</div>
