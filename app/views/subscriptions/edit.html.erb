<div class="collection-container">
  <div class="collection-body">
    <div class="centre">
      <h1>Add some details to your subscription for <%= @subscription.user.first_name %></h1>
    </div>
    <%= simple_form_for(@subscription) do |f| %>
      <%= f.input :street_address %>
      <%= f.input :suburb %>
      <% if current_user.admin? %>
        <%= f.input :customer_id %>
        <%= f.input :duration %>
        <%= f.input :start_date %>
        <%= f.input :collection_order %>
        <%= f.input :is_paused %>

        <%= f.input :collection_day, as: :select, collection: Date::DAYNAMES.map { |day| [day, day] } %>

      <% end %>


      <div class="centre">
        <%= f.button :submit, "Update Subscription", class: "gooi-submit-button" %>
      </div>
    <% end %>
  </div>
</div>
