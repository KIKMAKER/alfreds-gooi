<div class="user-wrapper">
  <div class="collection-body">
    <h1 class = "collection-header">Pick a subscription option</h1>
    <% if current_user.admin? %>
      <%= simple_form_for(@subscription) do |f| %>
        <%= f.input :customer_id %>
        <%= f.input :street_address, class: 'form-styling' %>
        <%= f.input :suburb %>
        <%= f.input :collection_day, as: :select, collection: Subscription.collection_days.keys.to_a %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :access_code %>
        <%= f.input :plan, label: "Choose a plan", collection: Subscription.humanized_plans.keys, include_blank: false, label_method: lambda { |key| Subscription.humanized_plans[key] } %>
        <%= f.input :duration, collection: %w[1 3 6] %>
        <%= f.button :submit, class:'gooi-button' %>
      <% end %>
    <% else %>
      <section>
        <div class="subscription-rates-update">
          <div class="standard-months-container">
            <% if current_user.total_collections > 1 %>
              <div class="month-card">
                <h3>6 month Original Gooier</h3>
                <p class="pricing-text"><strong>R120</strong> per month</p>
                <p class="pricing-text"><strong>Total:</strong> R720</p>
                <div>
                  <br>
                  <%= button_to 'Select', subscriptions_path,
               params: { subscription: { plan: 'Standard', duration: '6'}, og: true  },
               method: :post,
               class: "sign-up-btn" %>
                </div>
              </div>
            <% end %>
            <div class="month-card">
              <h3>1 month</h3>
              <p class="pricing-text"><strong>R260</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R260</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: { subscription: { plan: 'Standard', duration: '1' } },
               method: :post,
               class: "sign-up-btn" %>
              </div>
            </div>
            <div class="month-card">
              <h3>3 months</h3>
              <p class="pricing-text"><strong>R220</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R660</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: {subscription: { plan: 'Standard', duration: '3' } }, method: :post, class: "sign-up-btn"  %>
              </div>
            </div>
            <div class="month-card popular">
              <h4>Most popular</h4>
              <h3>6 months</h3>
              <p class="pricing-text"><strong>R180</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R1080</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: {subscription: { plan: 'Standard', duration: '6' } }, method: :post, class: "sign-up-btn"  %>
              </div>
            </div>
          </div>
          <div class="standard-months-container">
            <div class="month-card">
              <h3>1 month</h3>
              <p class="pricing-text"><strong>R300</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R300</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: {subscription: { plan: 'XL', duration: '1' } }, method: :post, class: "sign-up-btn"  %>
              </div>
            </div>
            <div class="month-card">
              <h3>3 months</h3>
              <p class="pricing-text"><strong>R270</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R810</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: {subscription: { plan: 'XL', duration: '3'} }, method: :post, class: "sign-up-btn"  %>
              </div>
            </div>
            <div class="month-card">
              <h3>6 months</h3>
              <p class="pricing-text"><strong>R240</strong> per month</p>
              <p class="pricing-text"><strong>Total:</strong> R1440</p>
              <div>
                <br>
                <%= button_to 'Select', subscriptions_path,
               params: {subscription: { plan: 'XL', duration: '6'} }, method: :post, class: "sign-up-btn"  %>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
