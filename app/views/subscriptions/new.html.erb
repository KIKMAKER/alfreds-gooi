<div class="collection-container">
  <div class="collection-body">
    <p class = "collection-header">New Subscription!</p>
    <% raise %>
    <%= simple_form_for(@subscription) do |f| %>
      <%#= f.input :customer_id %>
      <%= f.input :street_address, class: 'form-styling' %>
      <%= f.input :suburb %>
      <%= f.input :access_code %>

      <%= f.input :plan, collection: Subscription.humanized_plans.keys, include_blank: false, label_method: lambda { |key| Subscription.humanized_plans[key] } %>
      <%= f.input :duration, collection: %w[1 3 6] %>
      <%= f.input :collection_day, as: :select, collection: Subscription.collection_days.keys.to_a %>
      <%= f.input :start_date, as: :date, html5: true %>

      <%= f.button :submit, class:'gooi-button' %>
    <% end %>
  </div>
</div>
